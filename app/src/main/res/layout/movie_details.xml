<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/BackDopPathImgView"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/wonderfilm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.0" />
        <ImageView
            android:id="@+id/posterImgView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/wonderfilm"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toLeftOf="@+id/BackDopPathImgView"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/BackDopPathImgView"
            android:layout_marginStart="4dp" />


        <TextView
            android:id="@+id/RealeaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/5/4"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/titleTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="20sp"
            android:id="@+id/titleTextView"
            app:layout_constraintLeft_toRightOf="@+id/posterImgView"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.038"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/BackDopPathImgView"
            android:layout_marginStart="47dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/VoteAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.3/10"
            android:textSize="20sp"

            app:layout_constraintLeft_toLeftOf="@+id/RealeaseDate"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/RealeaseDate" />

        <TextView
            android:id="@+id/MovieTaagLine"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Story TagLine how are you my name is"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/posterImgView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/posterImgView" />

        <TextView
            style="@style/TextviewLimitText"
            android:id="@+id/MovieOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello for every one i love tomatos kmnjnijhikjio;,ofpkop"
            android:ellipsize="none"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/posterImgView"
            android:layout_marginTop="18dp"
            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@+id/MovieTaagLine"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.333" />

        <TextView
            android:id="@+id/ReadMoreStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:textSize="30sp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/MovieOverview"
            android:layout_marginRight="13dp"
            app:layout_constraintRight_toRightOf="@+id/MovieOverview"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="15dp"
            android:onClick="ReadMoreStoryButton"/>

        <TextView
            android:id="@+id/line1"
            android:layout_width="384dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="11dp"
            android:background="@color/Black"
            app:layout_constraintTop_toBottomOf="@+id/posterImgView" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ReadMoreStory"

            android:background="@color/Black"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/videosLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Videos"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="384dp"
            android:layout_height="1dp"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/MovieVideoxRecyclerView"
            android:background="@color/Black"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:text="Reviews"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/MovieReviews"
            style="@style/TextviewLimitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="9dp"
            android:text="Ahmed this is very nice film ..."
            android:textSize="25sp"
            android:ellipsize="none"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />
        <TextView
            android:id="@+id/ReadMoreReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:textSize="30sp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/MovieReviews"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="@+id/MovieOverview"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="15dp"
            android:onClick="ReadMoreReviews"/>
        <TextView
            android:id="@+id/line3"
            android:layout_width="384dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="11dp"
            android:background="@color/Black"
            app:layout_constraintTop_toBottomOf="@+id/ReadMoreReviews" />
        <TextView
            android:id="@+id/SimiliarLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Similarites"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line3" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/SimiliarRecycleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SimiliarLabel"></android.support.v7.widget.RecyclerView>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="20dp"
            android:orientation="horizontal" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_begin="20dp"
            android:orientation="vertical" />
        <TextView
            android:id="@+id/MoreSimiliarities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:visibility="invisible"
            android:textSize="30sp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toRightOf="@+id/MovieOverview"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="15dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/MovieVideoxRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/videosLabel"></android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/detailsLikeButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:onClick="AddToFavourite"
            android:background="@drawable/dislike"
            android:layout_marginTop="-1dp"
            app:layout_constraintTop_toBottomOf="@+id/BackDopPathImgView"
            android:layout_marginRight="33dp"
            app:layout_constraintRight_toRightOf="@+id/BackDopPathImgView" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>